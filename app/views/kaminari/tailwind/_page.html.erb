<% if page.current? %>
  <span aria-current="page" class="relative inline-flex items-center px-4 py-2 border text-sm font-medium bg-indigo-50 border-indigo-500 text-indigo-600">
    <%= page %>
  </span>
<% else %>
  <%= link_to page, url, class: "relative inline-flex items-center px-4 py-2 border text-sm font-medium bg-white border-gray-300 text-gray-700 hover:bg-gray-50", "aria-label": "#{page}페이지로 이동" %>
<% end %>
