<div class="auth-container">
  <h2>회원가입</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :email, "이메일" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "example@email.com" %>
    </div>

    <div class="field">
      <%= f.label :name, "이름" %>
      <%= f.text_field :name, placeholder: "실명을 입력해주세요" %>
    </div>

    <div class="field">
      <%= f.label :username, "사용자명" %>
      <%= f.text_field :username, placeholder: "영문자, 숫자, 밑줄만 사용 가능" %>
    </div>

    <div class="field">
      <%= f.label :password, "비밀번호" %>
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %>자 이상)</em>
      <% end %>
      <%= f.password_field :password, autocomplete: "new-password", placeholder: "#{@minimum_password_length}자 이상의 비밀번호" %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, "비밀번호 확인" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "비밀번호를 한 번 더 입력해주세요" %>
    </div>

    <div class="field">
      <%= f.label :description, "자기소개" %>
      <%= f.text_area :description, rows: 4, placeholder: "자신의 경력이나 특기를 소개해주세요" %>
    </div>

    <div class="field">
      <%= f.label :role_ids, "전문 분야 (하나 이상 선택)" %>
      <div class="roles-container">
        <% @roles_by_category.each do |category, roles| %>
          <div class="category-group">
            <h4><%= category %></h4>
            <% roles.each do |role| %>
              <div class="role-option">
                <%= f.check_box :role_ids, { multiple: true }, role.id, nil %>
                <%= f.label "role_ids_#{role.id}", role.name %>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>

    <div class="actions">
      <%= f.submit "가입하기" %>
    </div>
  <% end %>

  <div class="devise-links">
    <%= render "devise/shared/links" %>
  </div>
</div>
